<?php
if(isset($_GET["id_pizza"])):
    $id_pizza = $_GET["id_pizza"];
    $object = $classe::getOne($id_pizza);
    ?>
    <div id="popup-overlay">
        <div class="popup-container">
            <button class="bi bi-x"></button>
            <div id="popup-title">
                <h2><?= $object ?></h2>
                <?php
                    $ingredientsPizzaAll = $object->getIngredientList($id_pizza);
